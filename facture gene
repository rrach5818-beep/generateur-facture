        const defaultItem = { description: '', quantity: 1, unit: '', price: 0 };
        let appState = { items: [{ ...defaultItem }], currency: 'EUR', themeColor: '#0284c7', font: 'font-sans', logoData: null, signatureData: null, signaturePad: null, lang: 'fr', vatExempt: false, zoom: 0.5, docType: 'invoice', qrcodeObj: null };

        const form = document.getElementById('invoice-form');
        const itemsContainer = document.getElementById('items-container');
        const signatureCanvas = document.getElementById('signature-pad');
        const ctx = signatureCanvas.getContext('2d');
        const resizer = document.getElementById('resizer');
        const editorPanel = document.getElementById('editor-panel');

        function toggleDashboard() { const d = document.getElementById('dashboard-overlay'); if(d.classList.contains('hidden')) { d.classList.remove('hidden'); updateDashboard(); } else { d.classList.add('hidden'); } }
        function updateDashboard() {
            const h = getHistory(); const l = document.getElementById('dashboard-list'); let tr = 0; let pc = 0; let pec = 0; l.innerHTML = '';
            h.forEach(item => {
                let a = parseFloat(item.total.replace(/[^0-9,-]/g, '').replace(',', '.')) || 0;
                if(item.formState.status === 'payee') { tr += a; pc++; } else if (['attente', 'retard'].includes(item.formState.status)) { pec++; }
                // SECURITE: Utilisation de escapeHtml
                l.innerHTML += `<div class="p-4 flex justify-between items-center hover:bg-gray-50"><div><div class="font-bold text-gray-800">${escapeHtml(item.invoiceNum)}</div><div class="text-xs text-gray-500">${escapeHtml(item.clientName)}</div></div><div class="text-right"><div class="font-bold text-brand-600">${item.total}</div><div class="text-xs uppercase font-bold text-gray-400">${item.formState.status}</div></div></div>`;
            });
            document.getElementById('dash-total-revenue').textContent = new Intl.NumberFormat(appState.lang, { style: 'currency', currency: appState.currency }).format(tr);
            document.getElementById('dash-paid-count').textContent = pc; document.getElementById('dash-pending-count').textContent = pec;
        }

        // Feature: Send by Email
        function sendByEmail() {
            const num = document.getElementById('invoice-number').value;
            const total = document.getElementById('preview-total').textContent;
            const subject = encodeURIComponent(`Facture ${num}`);
            const body = encodeURIComponent(`Bonjour,\n\nVeuillez trouver ci-joint la facture ${num} d'un montant de ${total} ${getCurrencySymbol()}.\n\nCordialement.`);
            window.location.href = `mailto:?subject=${subject}&body=${body}`;
        }

        function convertQuoteToInvoice(id) { loadFromHistory(id); setTimeout(() => { document.getElementById('doc-type').value = 'invoice'; document.getElementById('invoice-number').value = document.getElementById('invoice-number').value.replace('DEV', 'FAC'); document.getElementById('invoice-status').value = 'attente'; updatePreview(); showToast("Devis converti en facture"); }, 500); }
        // Old copy function, kept for compatibility if needed but hidden
        function copyEmailSummary() { const num = document.getElementById('invoice-number').value; const total = document.getElementById('preview-total').textContent; const date = document.getElementById('invoice-date').value; const type = document.getElementById('doc-type').options[document.getElementById('doc-type').selectedIndex].text; let text = ""; if (appState.lang === 'fr') text = `Bonjour,\n\nVeuillez trouver ci-joint ${type.toLowerCase()} ${num} d'un montant de ${total}.\nDate : ${date}\n\nMerci de votre confiance.\nCordialement.`; else if (appState.lang === 'es') text = `Hola,\n\nAdjunto encontrar√° ${type.toLowerCase()} ${num} por un importe de ${total}.\nFecha: ${date}\n\nGracias por su confianza.\nAtentamente.`; else text = `Hello,\n\nPlease find attached ${type.toLowerCase()} ${num} for an amount of ${total}.\nDate: ${date}\n\nThank you for your business.\nRegards.`; const el = document.createElement('textarea'); el.value = text; document.body.appendChild(el); el.select(); document.execCommand('copy'); document.body.removeChild(el); showToast(appState.lang === 'fr' ? "Texte copi√© !" : "Text copied!"); }
        
        const updateQRCodeDebounced = debounce(updateQRCode, 500);
        const updatePreviewDebounced = debounce(() => { updatePreview(); saveToStorage(); }, 300);
        
        function saveProduct(index) { const item = appState.items[index]; if(!item.description) return; let products = getSavedProducts(); const existingIndex = products.findIndex(p => p.description === item.description); const newProduct = { description: item.description, price: item.price, unit: item.unit }; if(existingIndex >= 0) { products[existingIndex] = newProduct; showToast("Produit mis √† jour"); } else { products.push(newProduct); showToast("Produit ajout√©"); } localStorage.setItem('facturePro_products', JSON.stringify(products)); refreshProductList(); }
        function getSavedProducts() { try { return JSON.parse(localStorage.getItem('facturePro_products') || '[]'); } catch { return []; } }
        function refreshProductList() { let datalist = document.getElementById('product-list'); datalist.innerHTML = ''; const products = getSavedProducts(); products.forEach(p => { const opt = document.createElement('option'); opt.value = p.description; datalist.appendChild(opt); }); }
        function onDescriptionInput(index, value) { updateItem(index, 'description', value); const products = getSavedProducts(); const match = products.find(p => p.description === value); if(match) { appState.items[index].price = match.price; appState.items[index].unit = match.unit; const priceInput = document.getElementById(`input-price-${index}`); const unitInput = document.getElementById(`input-unit-${index}`); if(priceInput) priceInput.value = match.price; if(unitInput) unitInput.value = match.unit; updatePreview(); showToast("Prix charg√© !", "success"); } }

        function saveClientToBook() { const name = document.getElementById('client-name').value; const details = document.getElementById('client-details').value; if(!name) { showToast("Nom requis", "error"); return; } const clients = getSavedClients(); const existing = clients.find(c => c.name === name); if(existing) { existing.details = details; showToast("Client mis √† jour", "success"); } else { clients.push({ name, details }); showToast("Client sauvegard√©", "success"); } localStorage.setItem('facturePro_clients', JSON.stringify(clients)); refreshClientSelect(); }
        function getSavedClients() { try { return JSON.parse(localStorage.getItem('facturePro_clients') || '[]'); } catch { return []; } }
        function refreshClientSelect() { const select = document.getElementById('client-select'); const clients = getSavedClients(); if(clients.length > 0) { select.classList.remove('hidden'); select.innerHTML = '<option value="">Clients...</option>'; clients.forEach(c => { const opt = document.createElement('option'); opt.value = c.name; opt.textContent = c.name; select.appendChild(opt); }); } else { select.classList.add('hidden'); } }
        function loadClientFromBook(name) { if(!name) return; const clients = getSavedClients(); const client = clients.find(c => c.name === name); if(client) { document.getElementById('client-name').value = client.name; document.getElementById('client-details').value = client.details; updatePreview(); } }

        function updateFont() { const select = document.getElementById('font-select'); appState.font = select.value; const preview = document.getElementById('invoice-preview'); preview.classList.remove('font-sans', 'font-serif', 'font-mono'); preview.classList.add(appState.font); saveToStorage(); }
        function setLanguage(lang) {
            appState.lang = lang;
            
            const langSelect = document.getElementById('lang-select');
            if(langSelect) langSelect.value = lang;

            document.querySelectorAll('[data-i18n]').forEach(el => {
                const key = el.getAttribute('data-i18n');
                if(i18n[lang][key]) el.textContent = i18n[lang][key];
            });
            document.querySelectorAll('[data-placeholder-i18n]').forEach(el => {
                const key = el.getAttribute('data-placeholder-i18n');
                if(i18n[lang][key]) el.placeholder = i18n[lang][key];
            });
            refreshClientSelect(); 
            renderItemsForm();
            updatePreview();
            saveToStorage();
        }
        function showToast(message, type = 'success') { const container = document.getElementById('toast-container'); const toast = document.createElement('div'); const colors = type === 'error' ? 'bg-red-500' : 'bg-brand-600'; toast.className = `toast ${colors} text-white px-4 py-3 rounded-lg shadow-lg flex items-center gap-3 min-w-[250px]`; toast.innerHTML = `<i class="fa-solid ${type==='error'?'fa-circle-exclamation':'fa-circle-check'}"></i><span class="text-sm font-medium">${message}</span>`; container.appendChild(toast); requestAnimationFrame(() => toast.classList.add('show')); setTimeout(() => { toast.classList.remove('show'); setTimeout(() => toast.remove(), 300); }, 3000); }
        function setDueDate(days) { const invoiceDateInput = document.getElementById('invoice-date'); const dueDateInput = document.getElementById('due-date'); if(!invoiceDateInput.valueAsDate) invoiceDateInput.valueAsDate = new Date(); const baseDate = new Date(invoiceDateInput.valueAsDate); baseDate.setDate(baseDate.getDate() + days); dueDateInput.valueAsDate = baseDate; updatePreview(); }
        function toggleHistory() { const modal = document.getElementById('history-modal'); if(modal.classList.contains('hidden')) { modal.classList.remove('hidden'); renderHistoryList(); } else { modal.classList.add('hidden'); } }
        function getHistory() { try { return JSON.parse(localStorage.getItem('facturePro_history') || '[]'); } catch { return []; } }
        function saveCurrentInvoiceToHistory() {
            const data = { id: Date.now().toString(), savedAt: new Date().toISOString(), invoiceNum: document.getElementById('invoice-number').value, clientName: document.getElementById('client-name').value || 'Sans nom', total: document.getElementById('preview-total').textContent, formState: { invoiceNum: document.getElementById('invoice-number').value, clientName: document.getElementById('client-name').value, clientDetails: document.getElementById('client-details').value, senderName: document.getElementById('sender-name').value, senderDetails: document.getElementById('sender-details').value, bank: document.getElementById('bank-info').value, paymentLink: document.getElementById('payment-link').value, notes: document.getElementById('notes').value, discount: document.getElementById('discount-amount').value, paidAmount: document.getElementById('paid-amount').value, legalFooter: document.getElementById('legal-footer').value, taxRate: document.getElementById('tax-rate').value, vatExempt: appState.vatExempt, currency: document.getElementById('currency').value, status: document.getElementById('invoice-status').value, date: document.getElementById('invoice-date').value, dueDate: document.getElementById('due-date').value, font: appState.font, customLabel: document.getElementById('custom-label').value, customValue: document.getElementById('custom-value').value, docType: document.getElementById('doc-type').value }, items: appState.items, theme: appState.themeColor };
            const history = getHistory(); history.unshift(data); if(history.length > 50) history.pop(); localStorage.setItem('facturePro_history', JSON.stringify(history)); showToast("Document sauvegard√©"); renderHistoryList(); updateDashboard();
        }
        function renderHistoryList() { const history = getHistory(); const container = document.getElementById('history-list'); container.innerHTML = history.length ? '' : '<div class="text-center text-gray-400 mt-10">Aucune facture sauvegard√©e.</div>'; history.forEach(item => { const date = new Date(item.savedAt).toLocaleDateString(); const typeLabel = item.formState.docType ? item.formState.docType.toUpperCase() : 'DOC'; const div = document.createElement('div'); div.className = 'bg-white border border-gray-200 rounded-lg p-3 mb-2 hover:shadow-md transition-shadow flex justify-between items-center'; div.innerHTML = `<div class="cursor-pointer flex-1" onclick="loadFromHistory('${item.id}')"><div class="font-bold text-gray-800"><span class="text-xs bg-gray-200 px-1 rounded mr-1">${typeLabel}</span> ${item.invoiceNum}</div><div class="text-xs text-gray-500">${date} - ${item.clientName}</div><div class="text-sm font-bold text-brand-600">${item.total}</div></div><div class="flex gap-2">${item.formState.docType === 'quote' ? `<button onclick="convertQuoteToInvoice('${item.id}')" class="text-green-500 hover:text-green-700 p-1"><i class="fa-solid fa-file-invoice-dollar"></i></button>` : ''}<button onclick="deleteFromHistory('${item.id}')" class="text-gray-300 hover:text-red-500 p-2"><i class="fa-solid fa-trash"></i></button></div>`; container.appendChild(div); }); }
        function deleteFromHistory(id) { if(!confirm('Supprimer ?')) return; let h = getHistory(); h = h.filter(x => x.id !== id); localStorage.setItem('facturePro_history', JSON.stringify(h)); renderHistoryList(); updateDashboard(); }
        function loadFromHistory(id) { const history = getHistory(); const item = history.find(h => h.id === id); if(!item || !confirm('Charger ce document ?')) return; const f = item.formState; const setVal = (eid, val) => { const el = document.getElementById(eid); if(el) el.value = val || ''; }; setVal('invoice-number', f.invoiceNum); setVal('client-name', f.clientName); setVal('client-details', f.clientDetails); setVal('sender-name', f.senderName); setVal('sender-details', f.senderDetails); setVal('bank-info', f.bank); setVal('payment-link', f.paymentLink); setVal('notes', f.notes); setVal('discount-amount', f.discount); setVal('tax-rate', f.taxRate); setVal('paid-amount', f.paidAmount); setVal('legal-footer', f.legalFooter); setVal('currency', f.currency); setVal('invoice-status', f.status); setVal('invoice-date', f.date); setVal('due-date', f.dueDate); setVal('custom-label', f.customLabel); setVal('custom-value', f.customValue); const docTypeSelect = document.getElementById('doc-type'); if(docTypeSelect && f.docType) docTypeSelect.value = f.docType; const vatCheckbox = document.getElementById('vat-exempt'); if(vatCheckbox) vatCheckbox.checked = f.vatExempt; appState.vatExempt = f.vatExempt; if(f.font) { appState.font = f.font; const fontSelect = document.getElementById('font-select'); if(fontSelect) fontSelect.value = f.font; } appState.items = item.items || []; if(item.theme) setTheme(item.theme); toggleHistory(); renderItemsForm(); updatePreview(); updateFont(); updateQRCodeDebounced(); showToast("Charg√© avec succ√®s"); }
        function exportHistoryToCSV() { const history = getHistory(); if(history.length === 0) { showToast("Historique vide", "error"); return; } const headers = ["ID", "Date Creation", "Type", "Numero", "Client", "Total", "Statut"]; const rows = history.map(item => { const clean = (text) => `"${(text || '').replace(/"/g, '""')}"`; return [ clean(item.id), clean(new Date(item.savedAt).toLocaleDateString()), clean(item.formState.docType || 'invoice'), clean(item.invoiceNum), clean(item.clientName), clean(item.total), clean(item.formState.status) ].join(","); }); const csvContent = [headers.join(","), ...rows].join("\n"); const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' }); const url = URL.createObjectURL(blob); const link = document.createElement("a"); link.setAttribute("href", url); link.setAttribute("download", `export_compta_${new Date().toISOString().slice(0,10)}.csv`); document.body.appendChild(link); link.click(); document.body.removeChild(link); showToast("Fichier CSV g√©n√©r√©"); }

        // --- NEW DATA FUNCTIONS ---
        function exportGlobalData() {
            const data = {
                history: JSON.parse(localStorage.getItem('facturePro_history') || '[]'),
                clients: JSON.parse(localStorage.getItem('facturePro_clients') || '[]'),
                products: JSON.parse(localStorage.getItem('facturePro_products') || '[]'),
                settings: JSON.parse(localStorage.getItem('facturePro_settings') || '{}')
            };
            const blob = new Blob([JSON.stringify(data, null, 2)], {type: 'application/json'});
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `backup_facture_expert_${new Date().toISOString().slice(0,10)}.json`;
            a.click();
            showToast("Sauvegarde t√©l√©charg√©e !");
        }

        function importGlobalData(input) {
            const file = input.files[0];
            if(!file) return;
            const reader = new FileReader();
            reader.onload = (e) => {
                try {
                    const data = JSON.parse(e.target.result);
                    if(data.history) localStorage.setItem('facturePro_history', JSON.stringify(data.history));
                    if(data.clients) localStorage.setItem('facturePro_clients', JSON.stringify(data.clients));
                    if(data.products) localStorage.setItem('facturePro_products', JSON.stringify(data.products));
                    if(data.settings) localStorage.setItem('facturePro_settings', JSON.stringify(data.settings));
                    alert("Donn√©es restaur√©es avec succ√®s ! La page va se recharger.");
                    location.reload();
                } catch(err) {
                    alert("Erreur lors de l'import : Fichier invalide.");
                }
            };
            reader.readAsText(file);
        }

        function getMousePos(canvas, evt) { const rect = canvas.getBoundingClientRect(); return { x: (evt.clientX - rect.left) * (canvas.width / rect.width), y: (evt.clientY - rect.top) * (canvas.height / rect.height) }; }
        let isDrawing = false;
        function startDrawing(e) { isDrawing = true; ctx.beginPath(); const pos = getMousePos(signatureCanvas, e); ctx.moveTo(pos.x, pos.y); }
        function draw(e) { if (!isDrawing) return; const pos = getMousePos(signatureCanvas, e); ctx.lineWidth = 2; ctx.lineCap = 'round'; ctx.strokeStyle = '#000'; ctx.lineTo(pos.x, pos.y); ctx.stroke(); }
        function stopDrawing() { isDrawing = false; ctx.closePath(); updateSignaturePreview(); }
        function clearSignature() { ctx.clearRect(0, 0, signatureCanvas.width, signatureCanvas.height); appState.signatureData = null; const img = document.getElementById('preview-signature-img'); if(img) img.classList.add('hidden'); }
        function updateSignaturePreview() { appState.signatureData = signatureCanvas.toDataURL(); const img = document.getElementById('preview-signature-img'); if(img) { img.src = appState.signatureData; img.classList.remove('hidden'); } }
        function initSignaturePad() { signatureCanvas.addEventListener('mousedown', startDrawing); signatureCanvas.addEventListener('mousemove', draw); signatureCanvas.addEventListener('mouseup', stopDrawing); signatureCanvas.addEventListener('mouseout', stopDrawing); signatureCanvas.addEventListener('touchstart', (e) => { e.preventDefault(); if(e.touches.length > 0) { const touch = e.touches[0]; const mouseEvent = new MouseEvent("mousedown", { clientX: touch.clientX, clientY: touch.clientY }); signatureCanvas.dispatchEvent(mouseEvent); } }, {passive: false}); signatureCanvas.addEventListener('touchend', (e) => { const mouseEvent = new MouseEvent("mouseup", {}); signatureCanvas.dispatchEvent(mouseEvent); }); signatureCanvas.addEventListener('touchmove', (e) => { e.preventDefault(); if(e.touches.length > 0) { const touch = e.touches[0]; const mouseEvent = new MouseEvent("mousemove", { clientX: touch.clientX, clientY: touch.clientY }); signatureCanvas.dispatchEvent(mouseEvent); } }, {passive: false}); }

        if(resizer && editorPanel) { let x = 0; let w = 0; const mouseDownHandler = function(e) { x = e.clientX; const sbWidth = window.getComputedStyle(editorPanel).width; w = parseInt(sbWidth, 10); document.addEventListener('mousemove', mouseMoveHandler); document.addEventListener('mouseup', mouseUpHandler); document.body.style.cursor = 'col-resize'; document.body.style.userSelect = 'none'; resizer.classList.add('active'); }; const mouseMoveHandler = function(e) { const dx = e.clientX - x; const newWidth = w + dx; if(newWidth > 250 && newWidth < (window.innerWidth * 0.85)) { editorPanel.style.width = `${newWidth}px`; } }; const mouseUpHandler = function() { document.removeEventListener('mousemove', mouseMoveHandler); document.removeEventListener('mouseup', mouseUpHandler); document.body.style.removeProperty('cursor'); document.body.style.removeProperty('user-select'); resizer.classList.remove('active'); }; resizer.addEventListener('mousedown', mouseDownHandler); }

        document.addEventListener('DOMContentLoaded', () => {
            const dateInput = document.getElementById('invoice-date'); if(dateInput) dateInput.valueAsDate = new Date();
            const due = new Date(); due.setDate(due.getDate() + 30); const dueInput = document.getElementById('due-date'); if(dueInput) dueInput.valueAsDate = due;
            initSignaturePad(); loadFromStorage(); 
            if (!localStorage.getItem('facturePro_settings')) { const userLang = navigator.language || navigator.userLanguage; if (userLang.startsWith('es')) setLanguage('es'); else if (userLang.startsWith('en')) setLanguage('en'); else setLanguage('fr'); } else { setLanguage(appState.lang); }
            refreshClientSelect(); updateCurrencySymbols(); updateFont(); updateQRCode();
            if(!localStorage.getItem('cookieConsent')) document.getElementById('cookie-banner').classList.remove('translate-y-full');
            const inputs = form.querySelectorAll('input, select, textarea'); inputs.forEach(input => { if(input.id !== 'logo-upload' && input.id !== 'logo-size' && input.id !== 'client-select' && input.id !== 'font-select' && input.id !== 'doc-type') { input.addEventListener('input', () => { updatePreview(); saveToStorage(); }); } });
            // RESET ZOOM TO 50% ON LOAD
            appState.zoom = 0.5;
            adjustZoom(0);
        });

        function openModal(id, tab) {
            const modal = document.getElementById(id); const content = document.getElementById('legal-content'); const title = document.getElementById('legal-title');
            if(tab === 'privacy') { title.textContent = "Politique de Confidentialit√©"; content.innerHTML = `<h3 class="font-bold mt-4">1. Stockage Local</h3><p>Toutes les donn√©es saisies sur ce site (clients, factures, montants) sont stock√©es <strong>localement</strong> dans votre navigateur via la technologie "Local Storage". Aucune donn√©e n'est transmise √† nos serveurs.</p><h3 class="font-bold mt-4">2. Cookies</h3><p>Nous n'utilisons aucun cookie publicitaire tiers. Seul un cookie technique est utilis√© pour m√©moriser votre pr√©f√©rence de langue.</p>`; }
            else if (tab === 'mentions') { title.textContent = "Mentions L√©gales & Conditions"; content.innerHTML = `<div class="space-y-4 text-justify leading-relaxed"><p class="text-sm text-gray-500 italic border-l-4 border-brand-500 pl-4 bg-gray-50 py-2 rounded-r">La transparence est notre priorit√©. Cet outil a √©t√© con√ßu selon les standards de s√©curit√© "Privacy First" pour garantir une confidentialit√© totale de vos donn√©es commerciales.</p><h4 class="font-bold text-gray-900 border-b border-gray-200 pb-2 mt-6 mb-3 text-base">1. √âdition du Service</h4><p><strong>Nom du service :</strong> G√©n√©rateur Facture (InvoicExpert)<br><strong>Nature :</strong> Logiciel SaaS (Software as a Service) fonctionnant c√¥t√© client.<br><strong>Contact :</strong> <a href="mailto:contact@invoicexpert.com" class="text-brand-600 hover:underline font-medium">contact@invoicexpert.com</a><br><strong>Version :</strong> 3.0</p><h4 class="font-bold text-gray-900 border-b border-gray-200 pb-2 mt-6 mb-3 text-base">2. H√©bergement</h4><p>L'application est h√©berg√©e sur l'infrastructure mondiale de la soci√©t√© <strong>Vercel Inc.</strong><br>Adresse : 340 S Lemon Ave #4133 Walnut, CA 91789, USA.<br>L'h√©bergeur assure la disponibilit√© technique du site mais n'a acc√®s √† aucune donn√©e utilisateur.</p><h4 class="font-bold text-gray-900 border-b border-gray-200 pb-2 mt-6 mb-3 text-base">3. Protection des Donn√©es (RGPD)</h4><p>Nous respectons scrupuleusement le R√®glement G√©n√©ral sur la Protection des Donn√©es. Notre architecture technique est unique :</p><ul class="list-disc pl-5 space-y-1 mt-2 bg-green-50 p-3 rounded-lg border border-green-100 text-green-900 text-xs sm:text-sm"><li><strong>Z√©ro Base de Donn√©es :</strong> Nous ne collectons, ne stockons, ni ne transf√©rons aucune de vos donn√©es clients, factures ou coordonn√©es bancaires vers des serveurs tiers.</li><li><strong>Stockage Local (LocalStorage) :</strong> Toutes vos informations sont enregistr√©es exclusivement et crypt√©es dans la m√©moire interne de votre propre navigateur web.</li><li><strong>Souverainet√© :</strong> Vous restez le seul propri√©taire et d√©tenteur de vos donn√©es. En vidant le cache de votre navigateur, vous supprimez d√©finitivement toute trace de votre utilisation.</li></ul><h4 class="font-bold text-gray-900 border-b border-gray-200 pb-2 mt-6 mb-3 text-base">4. Limitation de Responsabilit√©</h4><p>Cet outil est fourni "en l'√©tat" pour faciliter la gestion administrative des professionnels et auto-entrepreneurs. Bien que nous nous efforcions de maintenir le service √† jour et conforme :</p><ul class="list-disc pl-5 space-y-1 mt-2"><li>L'√©diteur ne saurait √™tre tenu responsable des erreurs de saisie, de calcul ou d'arrondi. Il appartient √† l'utilisateur de v√©rifier l'exactitude de ses documents avant envoi.</li><li>L'utilisateur est seul responsable de la conformit√© l√©gale et fiscale des factures √©mises (mentions obligatoires, taux de TVA, d√©lais).</li><li>Nous d√©clinons toute responsabilit√© en cas de perte de donn√©es li√©e √† une d√©faillance de l'appareil de l'utilisateur ou √† un nettoyage involontaire du cache du navigateur (pensez √† utiliser la fonction de Sauvegarde/Backup).</li></ul><h4 class="font-bold text-gray-900 border-b border-gray-200 pb-2 mt-6 mb-3 text-base">5. Propri√©t√© Intellectuelle</h4><p>L'ensemble des √©l√©ments graphiques, la structure, le design et le code source sont la propri√©t√© exclusive de l'√©diteur, √† l'exception des biblioth√®ques tierces open-source utilis√©es (Tailwind CSS, FontAwesome, html2pdf, qrcode.js). Toute reproduction non autoris√©e est interdite.</p></div>`; }
            else if (tab === 'contact') { title.textContent = "Contact"; content.innerHTML = `<p>Pour toute question ou suggestion, vous pouvez nous √©crire √† : <br><a href="mailto:contact@invoicexpert.com" class="text-brand-600 font-bold">contact@invoicexpert.com</a></p>`; }
            modal.classList.remove('hidden');
        }
        function closeModal(id) { document.getElementById(id).classList.add('hidden'); }
        function acceptCookies() { localStorage.setItem('cookieConsent', 'true'); document.getElementById('cookie-banner').classList.add('translate-y-full'); }

        function setTheme(color) { appState.themeColor = color; const themeBgs = document.querySelectorAll('.theme-bg'); themeBgs.forEach(el => el.style.backgroundColor = color); const themeTexts = document.querySelectorAll('.theme-text'); themeTexts.forEach(el => el.style.color = color); saveToStorage(); }
        function handleLogoUpload(input) { if (input.files && input.files[0]) { const reader = new FileReader(); reader.onload = function(e) { appState.logoData = e.target.result; displayLogo(); saveToStorage(); }; reader.readAsDataURL(input.files[0]); } }
        function clearLogo() { appState.logoData = null; document.getElementById('logo-upload').value = ''; displayLogo(); saveToStorage(); }
        function displayLogo() { const container = document.getElementById('preview-logo-container'); if(!container) return; if (appState.logoData) { container.innerHTML = `<img src="${appState.logoData}" style="height: 60px; width: auto;" alt="Logo">`; } else { container.innerHTML = `<div class="h-12 w-12 bg-gray-100 rounded flex items-center justify-center text-gray-300 text-xs text-center p-1">Logo</div>`; } }

        function addItem() { appState.items.push({ description: '', quantity: 1, unit: '', price: 0 }); renderItemsForm(); updatePreview(); }
        function removeItem(index) { if (appState.items.length > 1) { appState.items.splice(index, 1); renderItemsForm(); updatePreview(); } }
        
        // CORRECTION: Fonction Dupliquer s√©curis√©e
        function duplicateItem(index) { 
            index = parseInt(index); // S√©curit√© type
            if (index >= 0 && index < appState.items.length) { 
                // Copie profonde pour √©viter tout lien avec l'objet original
                const itemToCopy = JSON.parse(JSON.stringify(appState.items[index])); 
                appState.items.splice(index + 1, 0, itemToCopy); 
                renderItemsForm(); 
                updatePreview(); 
            } 
        }

        function moveItem(index, direction) { const newIndex = index + direction; if (newIndex >= 0 && newIndex < appState.items.length) { const temp = appState.items[index]; appState.items[index] = appState.items[newIndex]; appState.items[newIndex] = temp; renderItemsForm(); updatePreview(); } }
        
        // MODIFICATION: Retour √† un stockage 'texte' simple pour √©viter les bugs de frappe (ex: "10.")
        // Le calcul se fera dans updatePreview avec parseFloat
        function updateItem(index, field, value) { 
            appState.items[index][field] = value; 
            updatePreview(); 
        }

        // MODIFICATION: Espacement augment√© (gap-8) + encapsulation dans des div blanches distinctes (style "card")
        function renderItemsForm() { 
            itemsContainer.innerHTML = ''; 
            const sym = getCurrencySymbol();
            
            appState.items.forEach((item, i) => {
                itemsContainer.innerHTML += `
                <div class="flex flex-col sm:flex-row items-end gap-2 bg-gray-50 p-2 rounded-lg border border-gray-200 shadow-sm transition-all hover:shadow-md mb-2">
                    <div class="w-full sm:flex-grow">
                        <label class="block text-[9px] font-bold text-gray-500 uppercase mb-1 px-1">Description</label>
                        <input type="text" value="${item.description}" list="product-list" oninput="onDescriptionInput(${i}, this.value)" class="form-input text-xs border-gray-300 focus:border-brand-500 focus:ring-1 focus:ring-brand-500 bg-white h-7 py-1" placeholder="Prestation">
                    </div>
                    
                    <div class="flex gap-1 w-full sm:w-auto">
                        <!-- Case Quantit√© (Ultra compact : w-12) -->
                        <div class="w-12 flex-shrink-0 bg-white px-0.5 py-0.5 rounded border border-gray-200 shadow-sm">
                            <label class="block text-[8px] font-bold text-gray-500 uppercase text-center mb-0">Qt√©</label>
                            <input type="number" value="${item.quantity}" oninput="updateItem(${i}, 'quantity', this.value)" class="w-full text-xs text-center font-bold text-gray-800 border-none focus:ring-0 h-5 bg-transparent p-0" placeholder="0">
                        </div>
                        
                        <!-- Case Unit√© (Ultra compact : w-12) -->
                        <div class="w-12 flex-shrink-0 bg-white px-0.5 py-0.5 rounded border border-gray-200 shadow-sm">
                            <label class="block text-[8px] font-bold text-gray-500 uppercase text-center mb-0">Unit√©</label>
                            <input type="text" value="${item.unit||''}" id="input-unit-${i}" list="unit-list" onfocus="this.select()" oninput="updateItem(${i}, 'unit', this.value)" class="w-full text-xs text-center border-none focus:ring-0 h-5 bg-transparent p-0" placeholder="U">
                        </div>
                        
                        <!-- Case Prix (Ultra compact : w-20) -->
                        <div class="w-20 flex-shrink-0 bg-white px-0.5 py-0.5 rounded border border-gray-200 shadow-sm">
                            <label class="block text-[8px] font-bold text-gray-500 uppercase text-right mb-0 px-1">Prix</label>
                            <div class="relative">
                                <input type="number" value="${item.price}" id="input-price-${i}" oninput="updateItem(${i}, 'price', this.value)" class="w-full text-xs text-right pl-3 font-mono font-bold text-gray-800 border-none focus:ring-0 h-5 bg-transparent p-0" placeholder="0.00">
                                <span class="absolute left-1 top-1/2 -translate-y-1/2 text-[9px] text-gray-400 font-bold pointer-events-none select-none currency-symbol">${sym}</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Boutons d'action -->
                    <div class="flex-shrink-0 flex items-center justify-center gap-0.5 h-7 pb-0">
                        <button type="button" onclick="saveProduct(${i})" class="text-gray-400 hover:text-brand-600 p-1 rounded hover:bg-gray-200 transition-colors" title="Enregistrer"><i class="fa-solid fa-save text-[10px]"></i></button>
                        <button type="button" onclick="duplicateItem(${i})" class="text-gray-400 hover:text-brand-600 p-1 rounded hover:bg-gray-200 transition-colors" title="Dupliquer"><i class="fa-regular fa-copy text-[10px]"></i></button>
                        <button type="button" onclick="removeItem(${i})" class="text-gray-400 hover:text-red-600 p-1 rounded hover:bg-red-50 transition-colors" title="Supprimer"><i class="fa-solid fa-trash-can text-[10px]"></i></button>
                    </div>
                </div>`;
            });
        }
        function updatePreview() {
            // Detailed logic same as before, ensures docType and calculations are correct
            const data = { invoiceNum: document.getElementById('invoice-number').value, status: document.getElementById('invoice-status').value, notes: document.getElementById('notes').value, legalFooter: document.getElementById('legal-footer').value, paidAmount: parseFloat(document.getElementById('paid-amount').value)||0, discount: parseFloat(document.getElementById('discount-amount').value)||0, taxRate: parseFloat(document.getElementById('tax-rate').value)||0, customLabel: document.getElementById('custom-label').value, customValue: document.getElementById('custom-value').value };
            document.getElementById('preview-invoice-number').textContent = data.invoiceNum;
            document.getElementById('preview-notes').textContent = data.notes;
            document.getElementById('preview-legal-footer').textContent = data.legalFooter;
            
            // Handle Doc Type Title
            const type = document.getElementById('doc-type').value;
            const titles = { invoice: 'FACTURE', quote: 'DEVIS', credit: 'AVOIR', delivery: 'BON LIVRAISON' };
            document.getElementById('doc-title').textContent = titles[type] || 'DOCUMENT';
            
            const customFieldContainer = document.getElementById('preview-custom-field');
            if(data.customLabel && data.customValue) { customFieldContainer.classList.remove('hidden'); document.getElementById('preview-custom-label').textContent = data.customLabel; document.getElementById('preview-custom-value').textContent = data.customValue; } else { customFieldContainer.classList.add('hidden'); }
            
            // MISE √Ä JOUR TEXTES (Client et Entreprise)
            document.getElementById('preview-sender-name').textContent = document.getElementById('sender-name').value;
            document.getElementById('preview-sender-details').textContent = document.getElementById('sender-details').value;
            document.getElementById('preview-client-name').textContent = document.getElementById('client-name').value || 'Client';
            document.getElementById('preview-client-details').textContent = document.getElementById('client-details').value;

            // Handle Stamp (CORRIG√â: Ajout du statut "En Attente")
            const stamp = document.getElementById('preview-stamp');
            stamp.className = ''; // Reset classes
            
            if (data.status === 'payee') {
                stamp.textContent = 'PAY√âE';
                stamp.classList.add('show', 'text-green-600', 'border-green-600');
            } else if (data.status === 'retard') {
                stamp.textContent = 'EN RETARD';
                stamp.classList.add('show', 'text-red-600', 'border-red-600');
            } else if (data.status === 'devis') {
                stamp.textContent = 'DEVIS';
                stamp.classList.add('show', 'text-gray-400', 'border-gray-400');
            } else if (data.status === 'attente') {
                stamp.textContent = 'EN ATTENTE';
                stamp.classList.add('show', 'text-orange-500', 'border-orange-500'); // Orange pour l'attente
            } else {
                stamp.classList.add('hidden');
            }

            // FIX: R√©int√©gration de la boucle d'affichage des lignes du tableau
            const tbody = document.getElementById('preview-items');
            tbody.innerHTML = '';
            let total = 0; 
            
            appState.items.forEach(i => {
                // PROTECTION: Eviter les nombres n√©gatifs (sauf cas sp√©ciaux)
                const qty = Math.max(0, parseFloat(i.quantity) || 0);
                const price = parseFloat(i.price) || 0; // Prix peut √™tre n√©gatif (remise)
                const lineTotal = qty * price;
                total += lineTotal;
                
                // Calcul du TTC par ligne pour affichage (masqu√© si non applicable)
                const lineTax = appState.vatExempt ? 0 : lineTotal * (data.taxRate/100);
                const lineTTC = lineTotal + lineTax;
                const ttcClass = appState.vatExempt ? 'hidden' : '';

                const row = `
                    <tr class="border-b border-gray-100 last:border-0">
                        <td class="py-3 px-4 text-left font-medium text-gray-700">${escapeHtml(i.description)}</td>
                        <td class="py-3 px-4 text-right text-gray-600">${qty}</td>
                        <td class="py-3 px-4 text-center text-gray-500 text-xs uppercase">${escapeHtml(i.unit || '')}</td>
                        <td class="py-3 px-4 text-right text-gray-600">${round(price).toFixed(2)}</td>
                        <td class="py-3 px-4 text-right font-bold text-gray-800">${round(lineTotal).toFixed(2)}</td>
                        <td class="py-3 px-4 text-right text-gray-500 text-xs ${ttcClass}">${round(lineTTC).toFixed(2)}</td>
                    </tr>`;
                tbody.innerHTML += row;
            });

            const taxable = Math.max(0, total - data.discount);
            const tax = appState.vatExempt ? 0 : taxable * (data.taxRate/100);
            const finalTotal = taxable + tax;
            const balance = Math.max(0, finalTotal - data.paidAmount);
            
            document.getElementById('preview-subtotal').textContent = round(total).toFixed(2);
            document.getElementById('preview-tax').textContent = round(tax).toFixed(2);
            document.getElementById('preview-total').textContent = round(balance).toFixed(2); // Display balance if deposit
            
            // Show paid amount row if > 0
            const paidRow = document.getElementById('paid-row');
            if(data.paidAmount > 0) { paidRow.classList.remove('hidden'); document.getElementById('preview-paid-amount').textContent = "-" + round(data.paidAmount).toFixed(2); } else { paidRow.classList.add('hidden'); }

            // Update tax rows vis
            const taxInputContainer = document.getElementById('tax-input-container'); const taxRow = document.getElementById('tax-row');
            const vatExemptNotice = document.getElementById('vat-exempt-notice'); const headerTTC = document.getElementById('header-ttc'); const subtotalLabel = document.getElementById('label-subtotal');

            if(appState.vatExempt) {
                if(taxInputContainer) taxInputContainer.classList.add('hidden'); if(taxRow) taxRow.classList.add('hidden'); if(headerTTC) headerTTC.classList.add('hidden');
                if(vatExemptNotice) { vatExemptNotice.textContent = i18n[appState.lang]['txt-vat-exempt']; vatExemptNotice.classList.remove('hidden'); }
                if(subtotalLabel) subtotalLabel.textContent = i18n[appState.lang]['col-total-ht'];
            } else {
                if(taxInputContainer) taxInputContainer.classList.remove('hidden'); if(taxRow) taxRow.classList.remove('hidden'); if(headerTTC) headerTTC.classList.remove('hidden');
                if(vatExemptNotice) vatExemptNotice.classList.add('hidden'); if(subtotalLabel) subtotalLabel.textContent = i18n[appState.lang]['total-sub'];
            }
        }
        function downloadPDF() { window.print(); }
        function saveToStorage() { localStorage.setItem('facturePro_settings', JSON.stringify({ theme: appState.themeColor, lang: appState.lang })); }
        function loadFromStorage() { 
            const s = JSON.parse(localStorage.getItem('facturePro_settings')||'{}'); 
            
            // FIX: On ne remplace la valeur que si elle est d√©finie (√©vite d'√©craser les d√©fauts HTML par du vide)
            // Correction sp√©cifique: On n'√©crase pas si v est undefined, null OU si c'est une cha√Æne vide ET que le champ a d√©j√† une valeur par d√©faut.
            // Cependant, pour simplifier et r√©pondre √† la demande: si v existe (truthy), on l'utilise.
            // Si c'est vide, on garde la valeur par d√©faut du HTML (ex: FAC-2025-001).
            const setVal = (id, v) => { 
                const el = document.getElementById(id); 
                if(el && v) el.value = v; 
            };

            setVal('sender-name', s.senderName); setVal('sender-details', s.senderDetails); 
            setVal('bank-info', s.bank); setVal('notes', s.notes); setVal('legal-footer', s.legalFooter);
            setVal('custom-label', s.customLabel); setVal('custom-value', s.customValue);
            
            setVal('invoice-number', s.invoiceNumber); // Important pour le d√©faut
            
            if(s.theme) setTheme(s.theme); if(s.lang) setLanguage(s.lang); 
            if(s.font) { appState.font = s.font; const fs = document.getElementById('font-select'); if(fs) fs.value = s.font; updateFont(); }
            if(s.vatExempt) { document.getElementById('vat-exempt').checked = true; appState.vatExempt = true; }
            if(s.logo) { appState.logoData = s.logo; displayLogo(); }
        }
        function adjustZoom(d) { if(d==='reset') appState.zoom=0.5; else appState.zoom+=d; document.getElementById('invoice-preview').style.transform=`scale(${appState.zoom})`; document.getElementById('zoom-level').textContent=Math.round(appState.zoom*100)+'%'; }
        function clearSignature() { ctx.clearRect(0,0,600,200); }
        function resetData() { if(confirm("Tout effacer ?")) { appState.items=[{...defaultItem}]; renderItemsForm(); updatePreview(); } }
    </script>
</body>
</html>
